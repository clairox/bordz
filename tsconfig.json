{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "api/*": ["./app/api/*"],
      "services/*": ["./lib/services/*"],
      "db": ["./lib/db"],
      "db/*": ["./lib/db/*"]
    },
    "types": ["vitest/globals"],
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "vitest.config.mts", "hooks/data/boardComponent/useLoadSelectedComponents/useLoadSelectedBoardComponents", "components/features/Wishlist/AddToWishlistButton"],
  "exclude": ["node_modules"]
}
